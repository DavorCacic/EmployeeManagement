@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}



<div class="container">
    <div class="row">
        @foreach (var emp in Model)
        {
            var photoPath = "~/images/" + (emp.PhotoPath ?? "download.jpg");
            <div class="col-lg-4 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h3>@emp.Name</h3>
                    </div>
                    <img class="card-img-top thumbnail" src="@photoPath" asp-append-version="true"/>
                    <div class="card-footer text-center">
                        <a asp-controller="home" asp-action="details" asp-route-id="@emp.Id" class="btn btn-primary">View</a>
                        <a asp-controller="home" asp-action="edit" asp-route-id="@emp.Id" class="btn btn-primary">Edit</a>
                        <a href="#" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
        
 </div>



  